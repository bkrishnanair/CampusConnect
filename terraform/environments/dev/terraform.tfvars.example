# CampusConnect Terraform Variables Example
# Copy this file to terraform.tfvars and customize as needed

# AWS Configuration
aws_region = "us-east-1"
environment = "dev"
project_name = "campus-events"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]

# Subnet Configuration
public_subnets = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnets = ["10.0.11.0/24", "10.0.12.0/24", "10.0.13.0/24"]
database_subnets = ["10.0.21.0/24", "10.0.22.0/24", "10.0.23.0/24"]

# EKS Configuration
eks_version = "1.31"

# RDS Configuration
rds_engine_version = "16.3"
rds_instance_class = "db.t3.medium"
rds_allocated_storage = 100
rds_storage_type = "gp3"
rds_db_name = "campus_events"
rds_username = "postgres"

# Note: rds_password should NOT be in this file for production
# Use AWS Secrets Manager or environment variables instead
# Example: export TF_VAR_rds_username="<value>"
